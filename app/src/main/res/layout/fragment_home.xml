<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#448AFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Logo -->


        <ImageView
            android:id="@+id/iconNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="44dp"
            android:contentDescription="Notification"
            android:src="@android:drawable/ic_popup_reminder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.044"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Logo"
            android:src="@drawable/ute1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Search Container -->

        <androidx.cardview.widget.CardView
            android:id="@+id/searchCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:backgroundTint="#E8E8FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="Search"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <EditText
                    android:id="@+id/searchBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:hint="Tìm kiếm tài liệu..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:maxLines="1"
                    app:layout_constraintStart_toEndOf="@id/searchIcon"
                    app:layout_constraintEnd_toStartOf="@id/addIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_input_add"
                    android:contentDescription="Add"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Container màu xanh cho cloud storage -->
        <View
            android:id="@+id/cloudContainer"
            android:layout_width="0dp"
            android:layout_height="330dp"
            android:layout_marginTop="16dp"
            android:background="#5B5FC7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchCard" />

        <!-- Dropbox Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDropbox"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardGDrive"
            app:layout_constraintTop_toBottomOf="@id/searchCard"
            app:layout_constraintHorizontal_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/dropboxIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_dropbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:rotation="90"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dropboxTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dropbox"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dropboxIcon" />

                <TextView
                    android:id="@+id/dropboxInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 items • 1.2 Gb"
                    android:textSize="12sp"
                    android:textColor="#666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dropboxTitle" />

                <ProgressBar
                    android:id="@+id/dropboxProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:progress="12"
                    android:layout_marginTop="8dp"
                    android:progressTint="#0061FF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/dropboxPercent" />

                <TextView
                    android:id="@+id/dropboxPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#0061FF"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Google Drive Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGDrive"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toEndOf="@id/cardDropbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchCard"
            app:layout_constraintHorizontal_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/gdriveIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gdrive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:rotation="90"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/gdriveEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kangxpukul@gmail.com"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gdriveIcon" />

                <TextView
                    android:id="@+id/gdriveInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 items • 13.5 Gb"
                    android:textSize="12sp"
                    android:textColor="#666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gdriveEmail" />

                <ProgressBar
                    android:id="@+id/gdriveProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:progress="52"
                    android:layout_marginTop="8dp"
                    android:progressTint="#4285F4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/gdrivePercent" />

                <TextView
                    android:id="@+id/gdrivePercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4285F4"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- OneDrive Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOneDrive1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardOneDrive2"
            app:layout_constraintTop_toBottomOf="@id/cardDropbox"
            app:layout_constraintHorizontal_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/onedrive1Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_onedrive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:rotation="90"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/onedrive1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nirwna - OneDrive"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive1Icon" />

                <TextView
                    android:id="@+id/onedrive1Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 items • 184.3 Gb"
                    android:textSize="12sp"
                    android:textColor="#666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive1Title" />

                <ProgressBar
                    android:id="@+id/onedrive1Progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:progress="31"
                    android:layout_marginTop="8dp"
                    android:progressTint="#0078D4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/onedrive1Percent" />

                <TextView
                    android:id="@+id/onedrive1Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#0078D4"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- OneDrive Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOneDrive2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toEndOf="@id/cardOneDrive1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardGDrive"
            app:layout_constraintHorizontal_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/onedrive2Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_onedrive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:rotation="90"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/onedrive2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIDT - OneDrive"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive2Icon" />

                <TextView
                    android:id="@+id/onedrive2Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 items • 1311 Gb"
                    android:textSize="12sp"
                    android:textColor="#666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onedrive2Title" />

                <ProgressBar
                    android:id="@+id/onedrive2Progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:progress="62"
                    android:layout_marginTop="8dp"
                    android:progressTint="#0078D4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/onedrive2Percent" />

                <TextView
                    android:id="@+id/onedrive2Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="62%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#0078D4"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Filter Buttons -->
        <Button
            android:id="@+id/btnAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất Cả"
            android:backgroundTint="#5B5FC7"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cloudContainer" />

        <Button
            android:id="@+id/btnPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phổ Biến"
            android:backgroundTint="#D3D3D3"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@id/btnAll"
            app:layout_constraintTop_toTopOf="@id/btnAll" />

        <Button
            android:id="@+id/btnNewest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mới Nhất"
            android:backgroundTint="#D3D3D3"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@id/btnPopular"
            app:layout_constraintTop_toTopOf="@id/btnAll" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHomeDocuments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnAll"
            tools:listitem="@layout/item_document" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
