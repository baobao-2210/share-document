<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5865F2"
    android:fillViewport="true"
    android:id="@+id/main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ute1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTE"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ivLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chia sẻ tài liệu học tập dễ dàng hơn"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card: Form -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvFormTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập tài khoản"
                    android:textColor="#536DFE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Toggle -->
                <LinearLayout
                    android:id="@+id/layoutRoleToggle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_toggle_container"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tvFormTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSinhVien"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_toggle_selected"
                        android:text="Sinh viên"
                        android:textColor="#2196F3"
                        android:textAllCaps="false"
                        android:textSize="13sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnGiangVien"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:text="Giảng viên"
                        android:textColor="#111111"
                        android:textAllCaps="false"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Gmail -->
                <TextView
                    android:id="@+id/tvGmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmail"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutRoleToggle"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/edtGmail"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="example@gmail.com"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tvGmailLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Password -->
                <TextView
                    android:id="@+id/tvMatKhauLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/edtGmail"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/edtMatKhau"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="Nhập mật khẩu"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tvMatKhauLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Quên mật khẩu -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu?"
                    android:textColor="#5865F2"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@id/edtMatKhau"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Đăng nhập -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmitDangNhap"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="18dp"
                    android:text="Đăng nhập"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#5865F2"
                    app:cornerRadius="26dp"
                    app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Divider phương thức khác -->
                <TextView
                    android:id="@+id/tvOr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoặc đăng nhập bằng"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/btnSubmitDangNhap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Social Login -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tvOr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/btnGoogle"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/ic_google" />

                    <Space
                        android:layout_width="18dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/btnMicrosoft"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/ic_microsoft" />

                    <Space
                        android:layout_width="18dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/btnFacebook"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/ic_facebook" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/cardForm"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
